@model IEnumerable<AgendaConsultas.Models.Exame>

@{
    ViewData["Title"] = "Index";
    var pacienteId = ViewData["PacienteId"];
    int count = 0;
}

<h1>Index</h1>

<p>
    <a asp-action="AgendarExame" asp-route-pacienteId="@pacienteId">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                Paciente
            </th>
            <th>
                Data
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @ViewData["PacienteNome"]
                </td>
                <td>
                    @ViewBag.datas[count]
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
            count++;
        }
    </tbody>
</table>
